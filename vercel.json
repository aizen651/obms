{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "public",
  "functions": {
    "api/lambda.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/lambda.php" }
  ],
  "buildCommand": "npm run build && php artisan view:cache && php artisan config:cache && php artisan route:cache"
}